type Group {
    id: Int
    slug: String
    displayName: String
    hashedId: String
    description: String
    iconUrl: String
    bannerUrl: String
    nsfw: Boolean
    isPrivate: Boolean
    createdAt: String
    updatedAt: String
    threads(limit: Int = 20, offset: Int = 0): [Thread]
}

input UpdateGroupInput {
    id: Int!
    displayName: String
    description: String
    iconUrl: String
    bannerUrl: String
    nsfw: Boolean
    isPrivate: Boolean
}